<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>

        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryDark">@color/secondColor</item>

        <item name="colorControlNormal">@color/mainColor</item>
        <item name="colorControlActivated">@color/secondColor</item>
        <item name="colorControlHighlight">@color/mainColor</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/mainColor</item>
        <item name="background">@color/mainColor</item>
    </style>
</resources>
